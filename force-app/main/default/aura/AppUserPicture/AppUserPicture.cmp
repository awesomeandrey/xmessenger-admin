<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="appUser" type="AppUser__x" default="{}"
                    description="Target record to load datta into."/>
    <force:recordData recordId="{!v.recordId}" targetFields="{!v.appUser}"
                      layoutType="COMPACT" fields="ExternalId,Fullname__c"/>
    <lightning:card variant="base" title="Picture" iconName="standard:avatar">
        <span class="slds-avatar slds-avatar_circle slds-avatar_large slds-align_absolute-center">
            <img alt="{!v.appUser.Fullname__c}" title="{!v.appUser.Fullname__c}"
                 src="{!join('/', 'https://api-xmessenger.herokuapp.com/open-api/user', v.appUser.ExternalId, 'picture')}"/>
        </span>
        <aura:set attribute="footer">
            <span class="slds-text-heading_small">{!v.appUser.Fullname__c}</span>
        </aura:set>
    </lightning:card>
</aura:component>